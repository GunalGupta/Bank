 <div class="main">  	
		<input type="checkbox" id="chk" aria-hidden="true">

			<div class="signup">
				<form method="POST" action="/register" novalidate>
					<label for="chk" class="display" aria-hidden="true">Sign up</label>
					<input type="text" id="floatingInput" value="{{this.name}}" name="name" placeholder="Name" required="">
                    <input type="text" name="contact_no" id="floatingInput" value="{{this.contact_no}}" placeholder="Contact Number" required="">
					<input type="text" name="pincode" id="floatingInput" value="{{this.pincode}}" placeholder="Pincode" required="">
					<input type="text" name="username" id="floatingInput" value="{{this.username}}" placeholder="Username" required="">
					<input type="password" name="password" id="floatingInput" value="{{this.password}}" placeholder="Password" required="">
					<button type="submit">Sign up</button>
				</form>
			</div>

			<div class="login">
				<form method="POST" action="/login" novalidate>
					<label for="chk" aria-hidden="true">Login</label>
					<input type="text" class="form-control" name="username" id="floatingInput" value="{{this.username}}" placeholder="Username" required="">
					<input type="password" class="form-control" name="password" id="floatingInput" value="{{this.password}}" placeholder="Password" required="">
					<button type="submit">Login</button>
				</form>
				 {{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert" style="text-align: center; color:red">
  {{alert}}
</div>
{{/if}}
			</div>



	</div>

  <div>
    <img src="img/new_logo.png" alt="Logo" width="300" height="300" id="logo-login">
    <h3 id="text-logo">The Bank you deserve</h3>
                       
  </div>